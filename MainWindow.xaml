                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="CourgetteButton_Kopieren3" Content="Courgette" HorizontalAlignment="Left" Margin="161,77,0,0" VerticalAlignment="Top" Click="CourgetteButton_Kopieren3_Click" Width="71" />

    </Grid>
</Window>
